{
	"manifest_version": 2,
	"name": "Politicians To Poop",
	"version": "1.0.4",
	"version_name": "1.0.4 First BugFix Release",
	"author":  "Evil Mad Scientist Laboratories",
	"description": "Replace presidential candidate names with the pile-of-poo emoji.",
	"options_page": "options.html",
	"permissions": ["storage"],
	"options_ui": { 
		"page": "options.html", 
		"chrome_style": true 
		},
	"icons": {	"16": "icon16.png",
				"48": "icon48.png",
				"128": "icon128.png",
				"256": "icon256.png" },
	"content_scripts": 
	[
		{
			"matches": ["*://*/*"],
			"js": [ "jquery-2.1.4.min.js", "jquery.ba-replacetext.min.js", "pols-to-poo.js" ],
			"run_at": "document_start"
		}
	]
}

